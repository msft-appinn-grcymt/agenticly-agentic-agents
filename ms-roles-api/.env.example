# Cosmos DB Configuration
# Set USE_COSMOS_DB=true to enable Cosmos DB, false to use in-memory data
USE_COSMOS_DB=false

# Cosmos DB Connection Settings (required when USE_COSMOS_DB=true)
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-primary-key-here

# Cosmos DB Database and Container Names
COSMOS_DATABASE_NAME=employees-db
COSMOS_CONTAINER_NAME=employees

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL_SECONDS=300
